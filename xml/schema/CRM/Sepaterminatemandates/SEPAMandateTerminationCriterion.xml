<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Sepaterminatemandates</base>
  <class>SEPAMandateTerminationCriterion</class>
  <name>civicrm_sdd_mandate_termination_criterion</name>
  <comment>Search Criteria for automatically termination of SEPA mandates</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique SEPAMandateTerminationCriterion ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>description</name>
    <title>Description</title>
    <type>text</type>
    <required>false</required>
    <length>255</length>
  </field>

  <field>
    <name>is_active</name>
    <title>Is active</title>
    <type>boolean</type>
    <required>true</required>
    <default>1</default>
  </field>

  <field>
    <name>search_criteria</name>
    <title>Search Criteria</title>
    <type>text</type>
    <required>false</required>
    <length>255</length>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>terminate_configuration</name>
    <title>Terminate Configuration</title>
    <type>text</type>
    <required>false</required>
    <length>255</length>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>next_check_date</name>
    <title>Next Check Date</title>
    <type>date</type>
    <required>false</required>
    <html>
      <type>Select Date</type>
    </html>
  </field>


</table>
